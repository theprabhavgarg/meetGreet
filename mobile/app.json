{
  "expo": {
    "name": "MeetUp Network",
    "slug": "meetup-network",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FAF8F2"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meetupnetwork.app",
      "infoPlist": {
        "NSCameraUsageDescription": "We need access to your camera to upload profile pictures and share meetup photos.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to upload profile pictures.",
        "NSLocationWhenInUseUsageDescription": "We need your location for safety features and to find nearby meetup spots."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FAF8F2"
      },
      "package": "com.meetupnetwork.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#F6DFA4"
        }
      ]
    ]
  }
}



